<h1><%= @user.name %></h1>
<% if current_user?@user %>
	<h2><%= @user.email %> <%= link_to "edit", edit_user_path(current_user) %></h2>
  <hr />
    
  <div class="span-12 colborder">
  <h2>My Toons</h2>
	<% if @characters.count > 0 %>
		<%= render @characters %>
	<% else %>
		You don't have any users yet! Head to the <%= link_to "search", characters_path %> 
		and claim your toon! 
	<% end %>
  </div>
  
	<div class="span-12 last">
  <h2>My Loot</h2>
	<% if @items.count > 0 %>
		<%= render @items %>
	<% else %>
		You don't have any items yet!
	<% end %>
  </div>
<% end %>