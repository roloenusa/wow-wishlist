<h1>Search</h1>

<hr />

<div class="round box">
  <div class="caps">CHARACTERS</div>
  <%= form_for(:characters, :url => new_character_path) do |f| %>
    <div class="field">
      <%= f.label :region %>
      <%= f.select :region, BattleNet::getRegions.each { |k| [k, k] } %>
    </div>
    <div class="field">
      <%= f.label :realm %>
      <%= f.select :realm,  BattleNet::getRealms()[:realms].each {|p| [ p[:name], p[:slug] ]} %>
    </div>
  <% end %>

</div>